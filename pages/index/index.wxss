/**index.wxss**/
page {
  height: 100%;
  overflow: hidden;
  background-color: #0D0D0D;
}

.main {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2), 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.main--collapse {
  transform: translateY(-240rpx);
}

.canvas {
  width: 120px;
  height: 120px;
  transform-origin: center;
}

.date {
  position: absolute;
  top: 40rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}

.mood {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all linear 0.5s;
}

.mood--0 {
  background-color: #E94B35;
}

.mood--1 {
  background-color: #F59D00;
}

.mood--2 {
  background-color: #1FCE6D;
}

.mood--3 {
  background-color: #2C97DE;
}

.mood--4 {
  background-color: #8F3FAF;
}

.mood--5 {
  background-color: #7F8C8D;
}

.mood--6 {
  background-color: #2B3E51;
}

.face {
  position: relative;
  top: -40rpx;
}



.actions {
  position: absolute;
  bottom: 20rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  left: 50%;
  transform: translateX(-50%);
  transition: opacity 0.2s ease;
  will-change: opacity;
}

.actions--hidden {
  opacity: 0;
  pointer-events: none;
}

.actions__btn-confirm-mood {
  color: #FFF;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  padding: 10rpx 40rpx;
  margin-bottom: 80rpx;
  font-weight: 500;
}

.actions__btn-confirm-mood.button-hover {
  background-color: rgba(0, 0, 0, 0.3);
}

.actions__btn-add-text {
  background: transparent;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.3);
  margin-bottom: 30rpx;

}

.actions__btn-add-text--filled {
  color: rgba(255, 255, 255, 0.8);
}



.say {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding-top: 120rpx;
  background-color: rgba(0, 0 ,0, 0.8);
  transition: opacity 0.2s 0.15s ease;
  will-change: opacity;
}

.say--hidden {
  opacity: 0;
  pointer-events: none;
}

.say__textarea {
  color: #FFF;
  font-weight: bold;
  font-size: 64rpx;
  word-break: keep-all;
  width: 630rpx;
  height: 370rpx;
  margin: 60rpx;
}

/*.say--hidden .say__textarea {
  visibility: hidden;
  pointer-events: none;
}*/

.say__textarea.textarea-placeholder {
  color: rgba(0, 0, 0, 0.3);
}

.say__submit-wrapper {
  width: 100%;
  position: relative;
}

.say__submit {
  width: 140rpx;
  height: 120rpx;
  background-image: url(data:image/png;base64,);
  background-position: center;
  background-repeat: no-repeat;
  background-size: 80rpx 60rpx;
  border-radius: 8rpx;
  position: absolute;
  /* top: 430rpx; */
  right: 60rpx;
  transition: transform 0.15s ease;
  z-index: 9;
}

.say__char-count {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  text-align: right;
}

.say__submit.button-hover {
  transform: scale(0.85);
}

.say--hidden .say__submit {
  transform: scale(0);
}


.history {
  position: fixed;
  bottom: 0;
  height: 240rpx;
  width: 100%;
  overflow: hidden;
  background-color: #0D0D0D;
  z-index: -1;
}

.history__scroll {
  /*display: flex;*/
  /*flex-direction: row;*/
  width: 100%;
  padding-left: 6rpx;
  white-space: nowrap
}

.history__feeling {
  display: inline-block;
  width: 240rpx;
  height: 240rpx;
  padding-top: 6rpx;
  margin-right: 6rpx;
  /*float: left;*/
}

.history__feeling__mood {
  width: 240rpx;
  height: 228rpx;
}

.history__feeling__content {
  padding-top: 54rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.history__feeling__img {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 24rpx;
}

.history__feeling__say, .history__feeling__say:before, .history__feeling__say:after {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #FFF;
}

.history__feeling__say {
  position: relative;
}

.history__feeling__say:before {
  content: '';
  position: absolute;
  left: -22rpx;
}

.history__feeling__say:after {
  content: '';
  position: absolute;
  right: -22rpx;
}

.mood--animated {
  pointer-events: none;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 60rpx;
  animation-play-state: paused;
  opacity: 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.mood--animated.mood--animating {
  animation-play-state: running;
}

.animated__feeling-img {
  width: 200rpx;
  height: 200rpx;
}
