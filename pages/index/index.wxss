/**index.wxss**/
page {
  height: 100%;
  overflow: hidden;
  background-color: #0D0D0D;
}

.main {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2), 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.main--collapse {
  transform: translateY(-240rpx);
}

.canvas {
  width: 120px;
  height: 120px;
  transform-origin: center;
}

.mood {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all linear 0.5s;
}

.mood--0 {
  background-color: #E94B35;
}

.mood--1 {
  background-color: #F59D00;
}

.mood--2 {
  background-color: #1FCE6D;
}

.mood--3 {
  background-color: #2C97DE;
}

.mood--4 {
  background-color: #8F3FAF;
}

.mood--5 {
  background-color: #7F8C8D;
}

.mood--6 {
  background-color: #2B3E51;
}

.face {
  position: relative;
  top: -40rpx;
}



.actions {
  position: absolute;
  bottom: 20rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  left: 50%;
  transform: translateX(-50%);
  transition: opacity 0.2s ease;
  will-change: opacity;
}

.actions--hidden {
  opacity: 0;
  pointer-events: none;
}

.actions__btn-confirm-mood {
  color: #FFF;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  padding: 10rpx 40rpx;
  margin-bottom: 80rpx;
}

.actions__btn-confirm.button-hover {
  background-color: rgba(0, 0, 0, 0.3);
}

.actions__btn-add-text {
  background: transparent;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.3);
  margin-bottom: 30rpx;

}

.actions__btn-add-text--filled {
  color: rgba(255, 255, 255, 0.8);
}



.say {
  width: 100%;
  height: 100%;
  padding: 60rpx;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0 ,0, 0.8);
  transition: opacity 0.2s ease;
  will-change: opacity;
}

.say--hidden {
  opacity: 0;
  pointer-events: none;
}

.say__textarea {
  color: #FFF;
  font-weight: bold;
  font-size: 64rpx;
  word-break: keep-all;
  width: 630rpx;
  height: 370rpx;
}

.say__textarea.textarea-placeholder {
  color: rgba(0, 0, 0, 0.3);
}


.history {
  position: fixed;
  bottom: 0;
  height: 240rpx;
  width: 100%;
  overflow: hidden;
  background-color: #0D0D0D;
  z-index: -1;
}





.blocks {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  opacity: 0.1;
}

.block {
  width: 100%;
  height: 172rpx;
  border-bottom: 1px solid red;
}
