/* components/feeling.wxss */
@import "/app.wxss";


.feeling {
  width: 100%;
  height: 100%;
}

.feeling__content {
  padding-top: 54rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feeling__img {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 24rpx;
}

.feeling__say, .feeling__say:before, .feeling__say:after {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #FFF;
}

.feeling__say {
  position: relative;
}

.feeling__say:before {
  content: '';
  position: absolute;
  left: -22rpx;
}

.feeling__say:after {
  content: '';
  position: absolute;
  right: -22rpx;
}
